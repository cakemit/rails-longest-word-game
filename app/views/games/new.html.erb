<h2>New game</h2>
<div id="letter-board" class="d-flex justify-content-start">
  <% @letters.each do |letter| %>
  <p class="letters m-1" style="padding: 5px;"><%= letter.capitalize %></p>
  <% end %>
</div>

<p> </p>
<p>What is the longest word you can find?</p>
<p></p>

<form action="/score" method="post" class="d-flex align-items-center" id="word-form">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'grid', @letters %>

  <div class="form-group flex-grow-1 m-0">
    <input type="text" name="word" class="form-control">
  </div>

  <input type="submit" class="btn btn-success">
</form>
